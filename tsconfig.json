{
	"compilerOptions": {
		"target": "ES2018",
		"lib": [
			"ES6",
			"esnext"
		],
		"module": "NodeNext",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"allowJs": true,
		"sourceMap": false,
		"outDir": "./build",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],
	"ts-node": {
		"esm": true
	}
}